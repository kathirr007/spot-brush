{
  "version": 2,
  "builds": [
    {
      "installCommand": "pnpm install --shamefully-hoist",
      "src": "package.json",
      "use": "@vercel/node"
    },
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "internalServer": true,
        "serverFiles": ["server/routes/index", "server/**"]
      }
    }
  ]
}
